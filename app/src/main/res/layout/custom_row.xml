    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="20sp" />

</LinearLayout>